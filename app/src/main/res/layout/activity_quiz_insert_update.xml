<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.QuizInsertUpdateActivity">

        <Button
            android:id="@+id/qie_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent"
            android:text="@string/cancel"
            app:layout_constraintEnd_toStartOf="@+id/qie_btn_save"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/qie_btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_save"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/qie_btn_cancel"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/qie_til_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qie_btn_cancel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/qie_et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/qie_til_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qie_til_title">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/qie_et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description_hint" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/qie_sp_class"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@+id/qie_sp_subject"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qie_til_description" />

        <Spinner
            android:id="@+id/qie_sp_subject"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/qie_sp_class"
            app:layout_constraintTop_toBottomOf="@+id/qie_til_description" />

        <Spinner
            android:id="@+id/qie_sp_difficulty"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/qie_til_sum_points"
            app:layout_constraintEnd_toStartOf="@+id/qie_til_sum_points"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qie_sp_subject" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/qie_til_sum_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/qie_sp_difficulty"
            app:layout_constraintTop_toBottomOf="@+id/qie_sp_subject">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/qie_et_sum_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sum_points_hint"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Ukupan broj bodova (teÅ¾ina * bodovi) ="
            app:layout_constraintEnd_toStartOf="@+id/qie_tv_max_points"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qie_til_sum_points" />

        <TextView
            android:id="@+id/qie_tv_max_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Pitanja i odgovori"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/btn_center_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/qie_et_question"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:hint="@string/question"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <EditText
            android:id="@+id/qie_et_answer_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:hint="@string/answer_1"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/qie_radio_group"
            app:layout_constraintTop_toBottomOf="@+id/qie_et_question" />

        <RadioGroup
            android:id="@+id/qie_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qie_et_question">

            <RadioButton
                android:id="@+id/qie_rb_answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <RadioButton
                android:id="@+id/qie_rb_answer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <RadioButton
                android:id="@+id/qie_rb_answer_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <RadioButton
                android:id="@+id/qie_rb_answer_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/qie_et_answer_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:hint="@string/answer_2"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/qie_radio_group"
            app:layout_constraintTop_toBottomOf="@+id/qie_et_answer_1" />

        <EditText
            android:id="@+id/qie_et_answer_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:hint="@string/answer_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/qie_radio_group"
            app:layout_constraintTop_toBottomOf="@+id/qie_et_answer_2" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/qie_et_answer_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:hint="@string/answer_4"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/qie_radio_group"
            app:layout_constraintTop_toBottomOf="@+id/qie_et_answer_3" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/qie_et_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/points_for_answer"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toStartOf="@+id/qie_btn_save_question"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/qie_radio_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qie_et_answer_4" />

        <Button
            android:id="@+id/qie_btn_save_question"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/btn_add_center"
            android:drawableStart="@drawable/ic_add_white"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="@string/add"
            app:layout_constraintBottom_toBottomOf="@+id/qie_et_points"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/qie_et_points"
            app:layout_constraintTop_toTopOf="@+id/qie_et_points" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/qie_rv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qie_et_points" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>
